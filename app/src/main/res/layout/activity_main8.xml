<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity8">

    <LinearLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        tools:context="cn.edu.gdmec.android.counttime.MainActivity">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="100dp"/>

        <!--填写倒计时时间-->
        <EditText
            android:id="@+id/input"
            android:layout_width="wrap_content"
            android:layout_height="50dp"
            android:hint="请输入倒计时长(min)"
            android:textColor="#95a1aa"
            android:paddingLeft="10dp"
            android:drawableLeft="@drawable/ic_baseline_timer_24"
            android:background="@drawable/edittext_border"
            android:gravity="center"
            android:layout_gravity="center"
            android:ems="10" />
        <!--获取倒计时时间-->
        <Button
            android:id="@+id/get"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:layout_gravity="center"
            android:text="获取倒计时时间"/>
        <!--显示倒计时-->
        <TextView
            android:id="@+id/time"
            android:layout_width="wrap_content"
            android:layout_height="50dp"
            android:gravity="center"
            android:layout_gravity="center"
            />
        <!--开始计时-->
        <Button
            android:id="@+id/starttime"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:layout_gravity="center"
            android:text="开始计时"/>
        <!--停止计时-->
        <Button
            android:id="@+id/stoptime"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:layout_gravity="center"
            android:text="停止计时"/>
    </LinearLayout>


</androidx.constraintlayout.widget.ConstraintLayout>