<?xml version="1.0" encoding="utf-8"?>
<shape xmlns:android="http://schemas.android.com/apk/res/android" >

    <!-- 设置透明背景色 -->
    <solid android:color="#E1483D" />

    <!-- 设置一个黑色边框 -->
    <stroke
        android:width="10px"
        android:color="#BC7676" />
    <!-- 设置四个圆角的半径 -->
    <corners
        android:bottomLeftRadius="60px"
        android:bottomRightRadius="60px"
        android:topLeftRadius="60px"
        android:topRightRadius="60px" />
    <gradient
        android:angle="270"
        android:endColor="#05707E"
        android:startColor="#2196F3" />
    <!-- 设置一下边距,让空间大一点 -->
    <padding
        android:bottom="5dp"
        android:left="5dp"
        android:right="5dp"
        android:top="5dp" />


</shape>